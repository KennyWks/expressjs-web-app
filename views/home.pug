extends layout
block content
    .container
        h1 Page #{title}
        table.table
                tr
                    th No
                    th NIM
                    th Nama
                    th Email
                    th Prodi
                each mhs, i in mahasiswa
                    tr
                        td= i+1
                        td= mhs.nim
                        td= mhs.nama
                        td= mhs.email
                        td= mhs.prodi
                        