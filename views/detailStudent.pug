extends layout
block content
    .container
        .row.mt-3
            .col
                .card(style='width: 27rem;')
                    .card-body
                        h5.card-title= student.name
                        h6.card-subtitle.mb-2.text-muted=student.nim
                        div.card-text.mb-3 
                        = student.email +' | '+ student.major
                        if user
                            .row
                                .col-sm-2
                                    a.btn.btn-success(href='/student/formEdit/'+student.id) Edit
                                .col-sm-5
                                    a.btn.btn-danger#delete(href='#' data-id=student.id) Delete - Ajax
                                .col-sm-5
                                    form(action='/student/delete' method='post')
                                        input#id(type='hidden', name='id' value=student.id)
                                        button.btn.btn-danger(type='submit') Delete - Post
